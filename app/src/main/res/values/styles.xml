<resources>
    <!-- Customize your theme here. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorSecondary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@drawable/firewatch_background</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="android:textColorHint">@color/colorSecondaryDarker</item>
    </style>

    <!--my customized action bar style-->
    <style name="MyActionBar" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="titleTextStyle">@style/MyTitleTextStyle</item>
        <item name="elevation">4dp</item>
        <item name="android:height">@dimen/bar_height</item>
        <item name="height">@dimen/bar_height</item>
    </style>

    <!--my customized App name color-->
    <style name="MyTitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/bar_text_size</item>
    </style>

    <!-- The SplashScreen theme. It sets the main window background drawable -->
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/firewatch_splash</item>
    </style>

    <!--Text Fields style-->
    <style name="TextFileds">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <!--Button text style, shape, color-->
    <style name="BorderlessButtonStyle" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">15sp</item>
        <item name="android:background">@drawable/button_shape</item>

    </style>

    <!-- The DEFAULT theme. It sets the main window background drawable -->
    <style name="DefaultTheme">
        <item name="android:windowBackground">@drawable/firewatch_background</item>
        <!-- Optional, on Android 5+ you can modify the colorPrimaryDark color to match the windowBackground color for further branding-->
        <!-- <item name="colorPrimaryDark">@android:color/white</item> -->
    </style>

</resources>
